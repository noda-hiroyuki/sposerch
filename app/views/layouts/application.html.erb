<!DOCTYPE html>
<html>
  <head>
    <title>Sposerch</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>

    <nav class="navbar navbar-default navbar-fixed-top navbar-transparent">
      <div class="container-fluid">
        <%= link_to root_path do %>
          <span class="navbar-title">スポサチ</span>
        <% end %>
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
          <li>
            <%= link_to users_erase_path do %>
            <span class="navbar-text">会員削除</span>
            <% end %>
          </li>
          <li>
            <%= link_to users_mypage_path do %>
            <span class="navbar-text">マイページ</span>
            <% end %>
          </li>
          <li>
            <%= link_to logout_path, method: :delete do %>
            <span class="navbar-text">ログアウト</span>
            <% end %>
          </li>
          <% else %>
          <li>
            <%= link_to users_new_path do %>
            <span class="navbar-text">会員登録</span>
            <% end %>
          </li>
          <li>
            <%= link_to login_path do %>
            <span class="navbar-text">ログイン</span>
            <% end %>
          </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <%= yield %>
    <script>
      $(function(){
        $(".alert").fadeOut(5000);
      });
    </script>
  </body>
</html>
