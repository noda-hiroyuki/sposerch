<div class="users-new-container">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4">
        <h1 class="text-center">会員登録</h1>
        <%= form_for @user do |f| %>
          <div class="form-group">
            <%= f.label :ユーザー名 %>
            <span class="text-red">　15文字以内</span>
            <%= f.text_field :name, class: 'form-control', :placeholder => 'ユーザー名を入力' %>
            <div id="used_name"></div>
            <%= @button_flag %>

            <%= f.label :email %>
            <span class="text-red">　半角英数字, ~@.~.~ のメールアドレス</span>
            <%= f.text_field :email, class: 'form-control', :placeholder => 'ログイン用メールアドレスを入力' %>
            <div id="used_email"></div>

            <%= f.label :password %>
            <span class="text-red">　半角英数字を両方1文字以上,8〜20文字</span>
            <%= f.password_field :password, class: 'form-control', :placeholder => 'パスワードを入力' %>
            <div id="password_check"></div>


            <%= f.label :再確認 %>
            <%= f.password_field :password_confirmation, class: 'form-control', :placeholder => 'パスワード再入力' %>
            <div id="input_password_confirmation"></div>

          </div>

          <%= f.submit "登録", class: 'btn-block', :id => 'user_new_submit'%>
        <% end %>
        <%= link_to login_path do %>
          <div class="users-new-text">ログインはこちら</div>
        <% end %>
      </div>
    </div>
  </div>
</div>
