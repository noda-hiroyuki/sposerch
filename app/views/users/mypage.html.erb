<head>
  <%= include_gon %>
</head>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 sports-info-container">
      <div class="events_text">ユーザー情報</div>
      <div class="events-container">
        <div class="events_text">ユーザー名：
          <%= @user.name %>
        </div>
        <% if @user.image.url != nil %>
          <div class="events_text">画像：
            <%= image_tag @user.image.url %>
          </div>
        <% else %>
          <div class="events_text">画像：
            <%= image_tag 'noimage.svg' %>
          </div>
        <% end %>
        <div class="events_text">メールアドレス：
          <%= @user.email %>
        </div>
        <div class="events_text">好きなスポーツ：
          <%= @user.splike %>
        </div>
        <div class="events_text">コメント：
          <%= @user.comment %>
        </div>
        <%= link_to users_edit_path do %>
          <div class="events_text">編集</div>
        <% end %>
      </div>
    </div>
    <div class="col-md-6 sports-info-container">
      <div class="events_text">イベント日程</div>
      <div class="events-container">
        <div id="calendar"></div>
      </div>
    </div>
  </div>
</div>

<script>
  var events = [];
  for (var i in gon.event_data) {
    events.push({title: gon.event_data[i].title, start: gon.event_data[i].date+"T12:30",
                 url: 'http://localhost:3000/topic/show/'+gon.event_data[i].id})
  }

  $(document).ready(function(){
    $('#calendar').fullCalendar({
      header: {
        left: 'prev, next, today',
        center: 'title',
        right: 'month, agendaWeek, agendaDay, listMonth',
      },
        events: events
    })
  });
</script>
