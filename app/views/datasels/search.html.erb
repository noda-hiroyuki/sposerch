<div class="users-new-container">
  <h1 class="text-center text-white">詳細検索</h1>
  <div class="container">
    <%= form_tag({action: :show}, {method: :get}) do %>
      <div class="row">
        <div class="col-md-offset-4 col-md-4 sports-info-container">
          <h3 class="text-black">ステップ1</h3>
          <div class="row">
            <div class="col-md-12 sports-info-container">
              <%= check_box_tag :'event[s1]','ゴルフ' %>
              <%= label_tag :event, "ゴルフ" %>
              <%= check_box_tag :'event[s2]','卓球' %>
              <%= label_tag :event, "卓球" %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-offset-4 col-md-4 sports-info-container">
          <h3 class="text-black">ステップ2</h3>
          <div class="row">
            <div class="col-md-12 sports-info-container">
              <h4 class="text-black">日時</h4>
              <label>開始日</label>
              <%=date_field_tag :datest %>
              <h4 class="text-black">〜</h4>
              <label>終了</label>
              <%=date_field_tag :dateen %>
              <p><label>場所</label>
              <%= select_tag 'place[name]', options_for_select([["北海道","北海道"],["青森","青森"],["岩手","岩手"],["秋田","秋田"],["宮城","宮城"],
                ["山形","山形"],["福島","福島"],["群馬","群馬"],["栃木","栃木"],["茨城","茨城"],["埼玉","埼玉"],["千葉","千葉"],["東京","東京"],
                ["山梨","山梨"],["静岡","静岡"],["長野","長野"],["新潟","新潟"],["富山","富山"],["福井","福井"],["石川","石川"],["愛知","愛知"],["岐阜","岐阜"],["三重","三重"],
                ["滋賀","滋賀"],["京都","京都"],["奈良","奈良"],["和歌山","和歌山"],["大阪","大阪"],["兵庫","兵庫"],["岡山","岡山"],["広島","広島"],["島根","島根"],
                ["鳥取","鳥取"],["山口","山口"],["香川","香川"],["徳島","徳島"],["愛媛","愛媛"],["高知","高知"],["福岡","福岡"],["大分","大分"],["長崎","長崎"],["熊本","熊本"],
                ["佐賀","佐賀"],["宮崎","宮崎"],["鹿児島","鹿児島"],["沖縄","沖縄"]]) %>
              </p>
            </div>
          </div>
        </div>
      </div>
      <%= submit_tag "検索", class: 'btn-block btn-white' %>
    <% end %>
  </div>
</div>
